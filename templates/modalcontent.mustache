<div class="modal-header">
  <h5 class="modal-title" id="modaltitle">{{modaltitle}}</h5>
  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
<div class="modal-body">
  {{context}}
</div>
<div class="modal-footer">
  {{#btnprimary}}<button type="button" class="btn btn-primary">{{btnprimary}}</button>{{/btnprimary}}
  <button type="button" class="btn btn-secondary" data-dismiss="modal">{{#str}} close, format_mytopcoll {{/str}}</button>
</div>
